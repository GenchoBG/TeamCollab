@model ProjectCreateViewModel
@{
    ViewData["Title"] = "CreateAsync";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-3">Create new project</h1>

<form asp-action="Create" asp-controller="Project" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Heading"></label>
        <input asp-for="Heading" class="form-control" placeholder="Heading">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Description" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-outline-success">Create</button>
</form>